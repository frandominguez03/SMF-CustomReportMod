<?xml version="1.0"?>
<!DOCTYPE package-info SYSTEM "http://www.simplemachines.org/xml/package-info">
<package-info xmlns="http://www.simplemachines.org/xml/package-info" xmlns:smf="http://www.simplemachines.org/">
	<id>sid2varun:customreportmod</id>
	<name>Custom Report Mod</name>
	<version>1.4 RC2</version>
	<type>modification</type>
	
	<install for="2.0 - 2.0.99">
		<readme type="file" parsebbc="true">readme.txt</readme>
		<modification>modification.xml</modification>
		<database>install.php</database>
		<require-file name="CustomReport.english.php" destination="$languagedir" />
		<require-file name="CustomReport.php" destination="$sourcedir" />
		<redirect url="?action=admin;area=manageboards;sa=settings" type="inline">Please stand by while you are being redirected to this modification's configuration settings.</redirect>
	</install>

	<uninstall for="2.0 - 2.0.99">
		<code>uninstall.php</code>
		<modification reverse="true">modification.xml</modification>
		<remove-file name="$sourcedir/CustomReport.php" />
		<remove-file name="$languagedir/CustomReport.english.php" />
		<redirect url="$scripturl?action=admin;area=packages;sa=browse" timeout="1000" />		
	</uninstall>
</package-info>